
<br>
<div class="container">
    <h3 class="heading" style="text-align:center"><strong>Users</strong></h3>
    
    <% if @user_list.any? %>
        <div align="center">
            <%= will_paginate @user_list, list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %> 
        </div>
        <% @user_list.each do |user| %>

            <div align="center">
            
                <div class="col-sm-7">
            
                    <div class="card">
                        <div class="card-body">
            
                            <div class="username">
            
                                <%= link_to user.username, user_path(user) %>
            
                            </div>
            
                            <div class="user_info">
            
                                <p> Article count: <%=user.articles.count %></p>
                            </div>

                            <% if user == current_user %>
                                <div class="user-actions">
                
                                    <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-sm btn-primary", style:"margin-bottom:10px" %>
                
                                    <%= link_to "Delete profile", user_path(user), method: :delete,
                
                                        data: { confirm: "Are you sure you want to delete this user and all it's articles?"},
                
                                        class: "btn btn-sm btn-danger", style:"margin-bottom:10px" %>
                
                                </div>
                            <% end %>
            
                        </div>
            
                    </div>
            
                </div>
                <br>
            </div>
        <% end %>
    <div align="center">
        <%= will_paginate @user_list, list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %> 
    </div>
    <% end %>
    
</div>


